<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sijia="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="2dp"
    android:foreground="?android:selectableItemBackground"
    sijia:contentPadding="4dp"
    sijia:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_foodrank_listview_item_foodimg"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/tv_foodrank_listview_item_shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/secondary_text"
            android:text="佳店名称" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">

            <com.qianxia.sijia.view.CircleImageView
                android:id="@+id/iv_foodrank_listview_item_ivavatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_foodrank_listview_item_foodbrief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="14dp"
                    android:text="我们的世界我们的世界我们的世界我们的世界我们的世界我们的世界我们的世界我们的世界" />

                <TextView
                    android:id="@+id/tv_foodrank_listview_item_username"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:text="by 浅夏" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <com.qianxia.sijia.view.SijiaTextView
                    android:id="@+id/tv_foodrank_listview_item_commentnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"
                    android:textSize="14sp"
                    sijia:sijiaDrawableLeft="@drawable/ic_comment"
                    sijia:sijiaDrawableLeftWidth="4dp"
                    sijia:sijiaDrawableLeftHeight="4dp" />

                <com.qianxia.sijia.view.SijiaTextView
                    android:id="@+id/tv_foodrank_listview_item_likenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    sijia:sijiaDrawableLeft="@drawable/ic_like_select"
                    android:text="(0)"
                    sijia:sijiaDrawableLeftWidth="4dp"
                    sijia:sijiaDrawableLeftHeight="4dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

