<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hotCitiesTextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:text="@string/hotCities"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp">

        <TextView
            android:id="@+id/tv_dialogcitysearch_beijing"
            style="@style/style_cityselect_hotcity_texview"
            android:text="@string/beijing"

            />

        <TextView
            android:id="@+id/tv_dialogcitysearch_shanghai"
            style="@style/style_cityselect_hotcity_texview"
            android:layout_centerInParent="true"
            android:text="上海"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/tv_dialogcitysearch_shenzhen"
            style="@style/style_cityselect_hotcity_texview"
            android:layout_alignParentEnd="true"
            android:text="深圳"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_dialogcitysearch_guangzhou"
            style="@style/style_cityselect_hotcity_texview"
            android:text="广州" />

        <TextView
            android:id="@+id/tv_dialogcitysearch_yantai"
            style="@style/style_cityselect_hotcity_texview"
            android:layout_centerInParent="true"
            android:text="烟台" />

        <TextView
            android:id="@+id/tv_dialogcitysearch_hefei"
            style="@style/style_cityselect_hotcity_texview"
            android:layout_alignParentEnd="true"
            android:text="合肥"

            />
    </RelativeLayout>

</LinearLayout>