<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sijia="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center_vertical"
        android:background="@drawable/selector_btn_white"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tv_foodname_shopdetail_header3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:text="佳食名称"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_price_shopdetail_header3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:textColor="@color/accent"
            android:text="参考价格："
            android:textSize="12sp" />

        <com.qianxia.sijia.view.SijiaTextView
            android:id="@+id/tv_likenum_shopdetail_header3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="(0)"
            android:textSize="12sp"
            sijia:sijiaDrawableLeft="@drawable/ic_like"
            sijia:sijiaDrawableLeftHeight="4dp"
            sijia:sijiaDrawableLeftWidth="4dp" />

        <com.qianxia.sijia.view.SijiaTextView
            android:id="@+id/tv_commentnum_shopdetail_header3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="(0)"
            android:textSize="12sp"
            sijia:sijiaDrawableLeft="@drawable/ic_comment"
            sijia:sijiaDrawableLeftHeight="4dp"
            sijia:sijiaDrawableLeftWidth="4dp" />

    </LinearLayout>

</LinearLayout>
