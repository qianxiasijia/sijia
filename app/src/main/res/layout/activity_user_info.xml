<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.qianxia.sijia.ui.UserInfoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/layout_toolbar_activity"
            android:id="@+id/layout_toolbar_activity" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:background="@color/primary_light">

            <LinearLayout
                android:id="@+id/ll_userinfo_nickname"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal"
                android:background="@drawable/selector_btn_white">

                <TextView
                    style="@style/style_userinfo_textlable"
                    android:text="昵称：" />

                <TextView
                    android:id="@+id/tv_userinfo_nickname"
                    android:text="浅夏"
                    style="@style/style_userinfo_textcontent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_userinfo_username"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/selector_btn_white">

                <TextView
                    style="@style/style_userinfo_textlable"
                    android:text="用户名：" />

                <TextView
                    android:id="@+id/tv_userinfo_username"
                    style="@style/style_userinfo_textcontent"
                    android:text="男" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_userinfo_gender"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:background="@drawable/selector_btn_white">

                <TextView
                    style="@style/style_userinfo_textlable"
                    android:text="性别：" />

                <TextView
                    android:id="@+id/tv_userinfo_gender"
                    style="@style/style_userinfo_textcontent"
                    android:text="男" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_userinfo_homeregion"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal"
                android:background="@drawable/selector_btn_white">

                <TextView
                    style="@style/style_userinfo_textlable"
                    android:text="故乡：" />

                <TextView
                    android:id="@+id/tv_userinfo_homeregion"
                    style="@style/style_userinfo_textcontent"
                    android:text="男" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_userinfo_birthdate"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal"
                android:background="@drawable/selector_btn_white">

                <TextView
                    style="@style/style_userinfo_textlable"
                    android:text="出生年月：" />

                <TextView
                    android:id="@+id/tv_userinfo_birthdate"
                    style="@style/style_userinfo_textcontent"
                    android:text="男" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_userinfo_signup"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="88dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/selector_btn_white">

                <TextView
                    android:text="个性签名："
                    style="@style/style_userinfo_textlable" />

                <TextView
                    android:id="@+id/tv_userinfo_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="@color/primary_text"
                    android:text="男" />

            </LinearLayout>

        </LinearLayout>

        <com.qianxia.sijia.view.CircleImageView
            android:id="@+id/iv_userinfo_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/food_sample"
            android:layout_marginTop="80dp" />

        <LinearLayout
            android:id="@+id/ll_userinfo_edit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/shape_hotcity_p"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:visibility="invisible">

            <EditText
                android:id="@+id/et_userinfo_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/shape_background_white"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:textSize="14sp"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/btn_userinfo_edit"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/icons"
                android:background="@drawable/selector_btn_accent"
                android:text="确定" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/prb_userinfo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progressbar"
            android:visibility="invisible" />

    </FrameLayout>

</ScrollView>
